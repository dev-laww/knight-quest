{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@middlewares": [
        "src/middlewares/index.ts"
      ],
      "@schemas/*": [
        "src/schemas/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ]
    },
    "moduleResolution": "Node",
    "outDir": "dist",
    "importsNotUsedAsValues": "remove",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
